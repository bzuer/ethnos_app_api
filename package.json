{
  "name": "ethnos-api",
  "version": "0.1.0",
  "description": "Academic bibliographic system API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "deploy": "bash scripts/manage.sh deploy",
    "dev": "nodemon src/app.js",
    "test": "cross-env NODE_ENV=test JEST_FAST=1 jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:load": "echo 'Load testing with artillery removed due to security vulnerabilities. Consider using autocannon or wrk for load testing.'",
    "docs:generate": "node scripts/generate-swagger.js",
    "docs:generate:yaml": "node -e \"try{const fs=require('fs');const yaml=require('yaml');const specs=require('./config/swagger.config');fs.mkdirSync('docs',{recursive:true});fs.writeFileSync('docs/swagger.yaml',yaml.stringify(specs));console.log('Swagger YAML generated at docs/swagger.yaml')}catch(e){console.error('YAML generation failed:',e.message);process.exit(1)}\"",
    "pm2:start": "pm2 start pm2.config.cjs --env production",
    "pm2:reload": "pm2 reload pm2.config.cjs --env production",
    "pm2:stop": "pm2 stop ethnos-api && pm2 delete ethnos-api || true",
    "pm2:status": "pm2 status ethnos-api",
    "pm2:logs": "pm2 logs ethnos-api"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.3.0",
    "helmet": "^7.0.0",
    "helmet-csp": "^4.0.0",
    "inflight": "^1.0.6",
    "joi": "^17.9.2",
    "lodash.isequal": "^4.5.0",
    "mariadb": "^3.2.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "mysql2": "^3.15.2",
    "pm2": "^6.0.14",
    "redis": "^4.6.7",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "cross-env": "^7.0.3",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ethnos",
    "api",
    "bibliography",
    "academic",
    "mariadb",
    "express"
  ]
}
